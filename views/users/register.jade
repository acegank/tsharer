extends ../layout


block content
	div.content.editContent
		form(action='/register',method='post',enctype='multipart/form-data',id='register')
			ul.login
				li
					a.link_blue(href='/login') 登录
					strong 注册
				li
					label 用户名:
					input(type='text',class='text_input',name='name',id='username')
				li
					label 邮箱:
					input(type='text',class='text_input',name='email')
					span#tip_email
				li
					label 密码:
					input(type='password',class='text_input',name='password')
				li
					label 确认密码:
					input(type='password',class='text_input',name='repassword')
					span#tip_password
				li
					label 头像:
					div#userIcon
					div#picList.picList
					dl.uploadBox
						dt#uploadBox
						dd
							div#uploadState.uploadState
					input(type='hidden',name='icon',id="pics")
				li
					label
					input(type='submit',value='注册')
		div#tip
		script.
			uploadFile.init('#picList','#pics','#uploadState','#uploadBox',true)
			Message.init(['#tip_password','#uploadState','#tip','#tip_password'])
			Message.show('register',#{message})
				