extends ../layout

block scripts
	script(src='/js/kindeditor/kindeditor.js')

block content
	div.articles
		form(method='post',action='/article/edit/')
			div.article_add
				label 编辑文章
			div.article_add
				label 标题:
				input(type='hidden',name='gid',value= gid)
				input(type='text',name='title',class='input_text',value= title )
				span
			div.article_add
				label 分类:
				ul.arcticle_types.clearfix
					each val in settings.types
						li
							input(type='radio',name='type',value= val.tid,checked= tid == val.tid ? true : false)
							em= val.value
				span
			div.article_add
				textarea(name='content',id='ke_content')= content
				span
				script.
					KindEditor.ready(function(K) { K.create('#ke_content', {uploadJson : '/article/upload'});});
				input(type='submit',value='提交')
				span.article_submit 提交
			


